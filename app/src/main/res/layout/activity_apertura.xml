<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_backgroud_vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/lyt_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <!-- logo base always show-->
                <ImageView
                    android:id="@+id/im_logo_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_logo_end"
                    android:visibility="visible" />

                <!-- show on second section -->
                <ImageView
                    android:id="@+id/im_logo_end_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_logo_end_2"
                    android:visibility="gone" />

                <!-- show on first section -->
                <ImageView
                    android:id="@+id/im_logo_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_logo_start"
                    android:visibility="visible" />

                <!-- show on first section -->
                <ImageView
                    android:id="@+id/im_logo_start_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_logo_start_2"
                    android:visibility="visible" />
            </RelativeLayout>

            <ImageView
                android:layout_width="85dp"
                android:layout_height="31.3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:background="@drawable/pic_logo_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_slug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:letterSpacing="0.2"
                android:lineSpacingExtra="12sp"
                android:text="Raise "
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:letterSpacing="0.2"
                android:lineSpacingExtra="12sp"
                android:text="you"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:letterSpacing="0.2"
                android:lineSpacingExtra="12sp"
                android:text="r habits"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>