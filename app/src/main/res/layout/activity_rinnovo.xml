    <TextView
        android:id="@+id/btn_cambia_piano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Gestisci il tuo rinnovo"
        android:textStyle="bold"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/txt_rinnovo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In questa sezione puoi disdire il rinnovo del
tuo abbonamento. Clicca qui per effettuare
