<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:isScrollContainer="true"
    android:scrollbars="none"
    tools:showIn="@layout/activity_sondaggio">


    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <TextView
            android:id="@+id/ciao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/margin_40dp"
            android:layout_marginHorizontal="@dimen/margin_20dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="Ciao" />
        <TextView
            android:id="@+id/andre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:layout_alignLeft="@id/ciao"
            android:layout_marginTop="@dimen/margin_40dp"
            android:layout_marginHorizontal="@dimen/margin_20dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="    Andrea" />
        <TextView
            android:id="@+id/ket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/margin_40dp"
            android:layout_marginHorizontal="@dimen/margin_20dp"
            android:fontFamily="@font/raleway_semibold"

            android:text="                        , rispondi al breve\nsondaggio per accedere ai contenuti \nsettimanali gratuiti." />


        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_below="@id/ket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/margin_20dp"
            android:gravity="left"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/btn_skip"
            android:layout_below="@id/ciao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/open_sans_regular"
            android:padding="0dp"
            android:layout_marginHorizontal="0dp"
            android:text="Start"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/darker_gray" />




        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/open_sans_regular"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="invisible"
            android:text="Next"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_below="@id/parentLayout"
        />

</RelativeLayout>